{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist/server",
    "target": "ES2020",
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/server"],
  "exclude": ["src/server/**/*.test.ts"]
}